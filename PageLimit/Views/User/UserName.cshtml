<style>
    .headerText {
        font-family: cursive;
    }

    #SaveModel, .edit-btn {
        margin-right: 5px;
    }

    #CloseModel, .delete-btn {
        margin-left: 5px;
    }

    button {
        padding: 10px 15px;
        font-size: 16px;
        cursor: pointer;
    }

    /* Overlay background */
    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: none;
        z-index: 998;
    }

    /* Offcanvas container */
    .offcanvas {
        position: fixed;
        top: 0;
        right: -300px; /* Hidden by default */
        width: 300px;
        height: 100%;
        background: white;
        box-shadow: -2px 0 8px rgba(0,0,0,0.2);
        padding: 20px;
        z-index: 999;
    }

    /* Close button */
    .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 24px;
        background: none;
        border: none;
        cursor: pointer;
    }

    .nowrap-gender {
        display: flex;
        align-items: center;
        gap: 10px; /* Optional spacing */
        white-space: nowrap;
    }

    .form-check-inline {
        display: flow !important;
        margin-right: 1rem;
    }

    .card-header {
        font-size: large;
        font-weight: 500;
        font-family: inherit;
    }

    #Asterisk {
        margin-left: 5px;
        color: red;
        font-weight: 600;
    }

    .card-body {
        border-top: var(--bs-card-border-width) solid var(--bs-card-border-color);
        padding-bottom: 10px;
        padding-top: 10px;
        background: #f8f8f8;
    }

    .alert {
        margin: auto;
        width: 28%;
    }

    #AlertPop {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1050;
        min-width: 300px;
    }

    .error {
        color: red;
        font-size: 13px;
        font-weight: 600;
    }
</style>

