@{
    ViewData["Title"] = "User Page";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<link href="~/css/userdetails.css" rel="stylesheet" />

<script src="~/js/jquery.validate.js"></script>

<h3 class="d-flex justify-content-center headerText">User Details</h3>

<div class="alert alert-info d-none" id="AlertPop" role="alert">
</div>

<div class="modal fade" id="HideConformation" tabindex="-1" aria-labelledby="modalLabel" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <h4>Are you sure you want to delete?</h4>
            </div>
            <div class="modal-footer justify-content-center">
                <button class="btn btn-danger" id="yesBtn">Yes</button>
                <button class="btn btn-secondary" data-bs-dismiss="modal" id="noBtn">No</button>
            </div>
        </div>
    </div>
</div>


<div class="datapiker hidingAdd ml-2 mt-1 d-flex justify-content-end" style="position: relative;margin-top:5px;margin-bottom:5px;">
    <div class="add-imp-exp-btn">
        <div class="exportsiconpop">
            <span class="pop">
                <a class="btn btn-primary m-r-20" id="AddUser">Create User</a>
            </span>
        </div>
    </div>
</div>
<div>
    <div class="table-responsive">
        <table id="dynamicTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Country</th>
                    <th>Gender</th>
                    <th>Skill</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="myUser" tabindex="-1" aria-labelledby="modalLabel" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="card">
                <div class="card-header">
                    Add User Details
                </div>
                <div class="container-fluid">
                    <div class="col-md-12 col-lg-12 col-sm-12 col-12 mt-2 d-flex justify-content-end">
                        <button id="" class="btn AddStockBtn" type="button" onclick="DyanamicHtml(this)">
                            <i class="fas fa-plus" id="AddButton"></i>
                        </button>
                    </div>
                    <form id="FromUserDetails" style="margin-top: -46px;">
                    </form>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <a class="btn btn-success m-r-20" id="SaveModel">Save</a>
                    <a class="btn btn-secondary m-r-20" id="CloseModel">Close</a>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/js/username.js"></script>
